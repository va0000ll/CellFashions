<div class="row">
  <div class="col-md-6 mx-auto">
  <h3 class="mb-3">اضافة منتج</h3>
  <%= form_with model: [:admin, @product] do |f| %>
    <div class="mb-3">
    <%= f.label :image, 'صورة المنتج', class: 'form-label' %>
    <%= f.file_field :image, class: 'form-control' %>
    </div>
    <div class="mb-3">
    <%= f.label :name, 'اسم المنتج', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
    <%= f.label :price, 'سعر المنتج', class: 'form-label' %>
    <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="mb-3">
    <%= f.label :description, 'الوصف', class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="mb-3">
    <%= f.label :keywords, 'كلمات مفتاحية', class: 'form-label' %>
    <%= f.text_area :keywords, class: 'form-control' %>
    </div>
    <div class="mb-3">
    <%= f.label :category_id, 'القسم', class: 'form-label' %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {}, { class: 'form-control' } %>
    </div>
    <%= f.submit 'حفظ', class: 'btn btn-primary' %>
  <% end %>
  </div>
</div>